{
  "name": "gmail-desktop",
  "productName": "Gmail Desktop",
  "version": "2.2.0",
  "description": "Unofficial Gmail Desktop App",
  "private": true,
  "repository": "timche/gmail-desktop",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "build/app.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "precommit": "lint-staged",
    "validate": "gulp validate",
    "start": "gulp && electron .",
    "dist": "gulp && electron-builder --macos --linux --windows --publish never"
  },
  "dependencies": {
    "electron-debug": "^2.1.0",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.11.0"
  },
  "devDependencies": {
    "@types/electron-settings": "^3.1.1",
    "@types/semver": "^5.5.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "gulp": "^4.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-prettier": "^2.1.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true
  },
  "eslintIgnore": [
    "build/"
  ],
  "build": {
    "directories": {
      "buildResources": "src/resources/build"
    },
    "files": [
      "build/**/*"
    ],
    "appId": "io.cheung.gmail-desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Office"
    }
  }
}
